@{
    ViewBag.Title = "Little Rock Tech Fest - Home";
    ViewBag.MetaDescription = "Little Rock Tech Fest, organized by the Little Rock .NET User Group, is a one day tech fest serving the Greater Little Rock area.";
}

	<!-- Main hero unit for a primary marketing message or call to action -->
	<div class="hero-unit">
		<div class="container">
			<div class="row event-info">
                <div class="span3 offset1 left-callout">
                    @if (!String.IsNullOrEmpty(ViewBag.NumberRegistered.ToString())) { 
                        <p class="attending"><span>@ViewBag.NumberRegistered</span> people are attending.</p>
                    }
                    <p><a href="http://lrtechfest.eventbrite.com/?ref=elink" target="_blank" title="Register Today"><img src="@Url.Content("~/img/btn_register_today.png")" alt="Register Today" /></a></p>
                    <div class="social"><div class="tag">SOCIAL</div>

                        <!-- AddThis Follow BEGIN -->
                        <span class="addthis_toolbox addthis_32x32_style addthis_default_style">
                        <a class="addthis_button_facebook_follow" addthis:userid="LittleRockTechFest"></a>
                        <a class="addthis_button_twitter_follow" addthis:userid="lrtechfest"></a>
                        </span>
                        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-50f348700ad414e9"></script>
                        <!-- AddThis Follow END -->


                    </div>

                </div>
				<div class="span8">
				    <h1>Little Rock Tech Fest</h1>
				    <h2>March 1st, 2013</h2>
				    <h3>UALR</h3>
				</div>
			</div>
		</div>
		<div class="container event-more-info">
			<div class="row ">
			    <p>Little Rock Tech Fest is a massive, free one-day technology conference featuring popular 
			    developer topics from industry leaders. Did we mention it's free? Save the date: 3/1/13!</p>
			</div>
		</div>
	</div>


	<div class="event-highlight">
		<div class="container highlight-callout">
		   <div class="row">
	    		<h1>1 day &bull; 4 tracks &bull; 300+ peers </h1>
		   </div>
		</div>
		<div class="container">
		   <div class="row">
		      <div class="span5 offset1">
			      <p>The Little Rock .NET User Group is proud to present Little Rock Tech Fest 2013. LR Tech Fest is continuing in its tradition of providing the largest, free technology conference in central Arkansas on March 1, 2013--please join us in making this conference the best one ever!</p>
			
			      <p>This year we are providing four information-packed tracks presented by industry leaders from all over--which is sure to inspire and enlighten all who attend.</p>
		      </div>
		      <div class="span5">
			      
			      <p>We can bring you such an event for free because of our awesome sponsors, many of whom will be present at the event, with swag and prizes galore. Come hear from professionals in the field, learn about products and services to empower you as a software developer, and mingle with your peers during this day of education and fun.</p>
		      </div>
		   </div>
	    </div>
	</div>
	
	

